<script>
    if (typeof window !== 'undefined' && typeof gsap !== 'undefined') {
        /* ------------------------------------------------
           4. HORIZONTAL SCROLL - 3カラムレイアウト対応
           セクション間で異なるスクロール硬さを適用
           ------------------------------------------------ */
        const wrapper = document.querySelector('.horizontal-wrapper');
        const container = document.querySelector('.horizontal-container');
        const panels = gsap.utils.toArray('.h-panel');
        const spacerPanel = panels[0]; // 「重力と遊ぶ」パネル
        const skeletonBox = spacerPanel.querySelector('.skeleton-text-box');

        /* ------------------------------------------------
           GEAR Panel スクロール連動カラー化
           ------------------------------------------------ */
        const gearImage = document.getElementById('gear-panel-image');

        /* ------------------------------------------------
           スクロール硬さの設定
           scrub値が小さいほど硬い（反応が鈍い）
           ------------------------------------------------ */
        // 基準値 0.2 から計算
        const scrubGravity = 0.2 * 0.65;    // 重力と遊ぶカード出現: 35%硬く = 0.13
        const scrubCh1to2 = 0.2 * 0.55;     // Chapter1→2間: 45%硬く = 0.11
        const scrubCh2to3 = 0.2 * 0.55;     // Chapter2→3間: 45%硬く = 0.11
        const scrubCh3toF2 = 0.2 * 0.70;    // Chapter3→2階: 30%硬く = 0.14

        const tl = gsap.timeline({
            scrollTrigger: {
                trigger: wrapper,
                pin: true,
                scrub: scrubGravity, // 初期値（重力と遊ぶカード用）
                anticipatePin: 1,
                invalidateOnRefresh: true,
                // スクロール距離1.5
                end: () => "+=" + (panels.length * window.innerWidth * 1.5),
                // スクロール位置に応じてscrub値を動的に変更
                onUpdate: (self) => {
                    const progress = self.progress;
                    const st = self;

                    // 進行度に応じてscrub値を変更
                    // 0-20%: 重力と遊ぶカード (35%硬く)
                    // 20-45%: Chapter1→2 (45%硬く)
                    // 45-70%: Chapter2→3 (45%硬く)
                    // 70-100%: Chapter3→2階 (30%硬く)

                    if (progress < 0.20) {
                        st.vars.scrub = scrubGravity;
                    } else if (progress < 0.45) {
                        st.vars.scrub = scrubCh1to2;
                    } else if (progress < 0.70) {
                        st.vars.scrub = scrubCh2to3;
                    } else {
                        st.vars.scrub = scrubCh3toF2;
                    }
                }
            }
        });

        /* ------------------------------------------------
           「重力と遊ぶ」パネル - 消失問題修正版
           スクロール開始から最後まで表示し続ける
           35%硬くして出現
           ------------------------------------------------ */
        if (skeletonBox) {
            // 初期状態：中央に表示
            gsap.set(skeletonBox, { y: 0, opacity: 1, scale: 1 });

            // 1. しばらく表示を維持（消えないように長めに）
            tl.to(skeletonBox, {
                y: 0,
                opacity: 1,
                duration: 1.5,
                ease: "none"
            });

            // 2. フェードアウト開始（次のパネルへの移行直前）- 60%カット
            tl.to(skeletonBox, {
                opacity: 0,
                scale: 0.95,
                duration: 0.12, // 0.3 * 0.4 = 0.12 (60%カット)
                ease: "power2.inOut"
            });
        } else {
            tl.to({}, { duration: 1.0 });
        }

        // Spacer Panelをフェードアウト（60%カット）
        tl.to(spacerPanel, {
            opacity: 0,
            scale: 0.95,
            duration: 0.16, // 0.4 * 0.4 = 0.16 (60%カット)
            ease: "power2.inOut"
        }, "<");

        panels.forEach((panel, i) => {
            if (i === 0) return;

            // コンテンツ要素を取得（3カラムレイアウト対応）
            const img = panel.querySelector('.merge-img-wrapper');
            const panelImage = panel.querySelector('.merge-img-wrapper img');
            const txt = panel.querySelector('.merge-text-wrapper');
            const chars = panel.querySelectorAll('.tategaki-char');

            // 新しい巨大縦長ボタン（3カラム用）
            const verticalButton = panel.querySelector('.giant-vertical-button');

            // ボタンを初期非表示に（CSSで !important 指定済み、GSAPは後でクラス追加時に制御）

            // Chapter 01（i === 1）の場合、フェードオーバーラップ効果
            if (i === 1) {
                // パネル自体を初期状態で少し透明に
                gsap.set(panel, { opacity: 0.7 });

                // 1. パネル移動 + フェードイン（60%カット後の隙間）
                tl.to(container, {
                    x: - (i * 100) + "vw",
                    ease: "power1.inOut",
                    duration: 0.32 // 0.8 * 0.4 = 0.32 (60%カット)
                });

                // パネル自体をフェードイン
                tl.to(panel, {
                    opacity: 1,
                    duration: 0.2, // 0.5 * 0.4
                    ease: "power2.out"
                }, "<+=0.04");

                // Spacer Panelを完全に消す
                tl.to(spacerPanel, {
                    opacity: 0,
                    duration: 0.12 // 0.3 * 0.4
                }, "<");
            } else {
                // 通常のパネル移動
                tl.to(container, {
                    x: - (i * 100) + "vw",
                    ease: "none",
                    duration: 0.8
                });
            }

            if(img && txt) {
                // ★ 新しいアニメーション順序（3カラムレイアウト） ★

                // 1. サムネイルが左にガチャッとはまる
                tl.fromTo(img,
                    { x: -80, opacity: 0 },
                    { x: 0, opacity: 1, duration: 0.8, ease: "power2.out" },
                    "<+=0.1"
                );

                // 2. サムネイルがはまったら → 文字が出現開始
                tl.fromTo(txt,
                    { x: 50, opacity: 0 },
                    { x: 0, opacity: 1, duration: 0.6, ease: "power1.out" },
                    ">" // 画像の後
                );

                // 3. 文字が一文字ずつ出現（シネマライク）
                tl.fromTo(chars,
                    { y: 30, opacity: 0 },
                    { y: 0, opacity: 1, stagger: 0.02, duration: 0.8, ease: "power1.out" },
                    "<+=0.1"
                );

                // 4. 文字出現中にサムネイルをカラー化
                if (panelImage) {
                    tl.to(panelImage, {
                        filter: 'grayscale(0%)',
                        duration: 0.6,
                        ease: "power1.out"
                    }, "<+=0.2");
                }

                // 5. 文字が完全に終わった後、ボタンをグリッチアニメーションで下から出現
                if (verticalButton) {
                    // 文字完了後に間を置く
                    tl.to({}, { duration: 0.3 }, ">");

                    // グリッチアニメーションでボタンが下から出現（クラス追加のみ）
                    tl.add(() => {
                        verticalButton.classList.add('glitch-active');
                    });

                    // アニメーション時間分待つ
                    tl.to({}, { duration: 0.8 });

                    // グリッチアニメーション終了後、通常状態に（点滅継続）
                    tl.add(() => {
                        verticalButton.classList.remove('glitch-active');
                        verticalButton.classList.add('glitch-done');
                    });

                    // 余韻（短め）
                    tl.to({}, { duration: 0.2 });
                }
            }
        });
    }
</script>
